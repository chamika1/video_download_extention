{
  "manifest_version": 3,
  "name": "Web Media Downloader",
  "version": "1.0",
  "description": "Download videos and images from websites",
  "permissions": [
    "webRequest",
    "tabs",
    "activeTab",
    "storage",
    "downloads",
    "downloads.shelf",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
} 